doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title 文章信息展示
    style.
      body {
      margin: 0;
      }
      ul {
      margin: 0;
      padding: 0;
      list-style: none;
      }
      a{
      text-decoration: none;
      color: #404040;
      }
      .wrap{
      width: 600px;
      margin: 0 auto;
      }
      .news-list {
      width: 600px;
      }
      .news {
      width: 100%;
      display: flex;
      justify-content: space-between;
      padding: 15px 0;
      border-bottom: 1px solid #999;
      }
      .news img {
      width:140px;
      }
      .info {
      display: flex;
      width: 200px;
      justify-content: space-between;
      font-size: 12px;
      color: #888;
      }
      .tips {
      display: flex;
      width: 60px;
      justify-content: space-between;
      }
      .news-list{
      min-height: 686px;
      }
      .news-list li:nth-child(5) {
      border-bottom: none;
      }
      .pagination{
      display: flex;
      width: 300px;
      text-align: center;
      background-color: rgb(252, 238, 238);
      border-radius: 25px;
      overflow: hidden;
      margin: 0 auto;
      }
      .pagination a{
      width: 30px;
      line-height: 30px;
      color: #404040;
      flex:1;
      }
      .pagination a:nth-child(1) {
      transform: rotate(-45deg) ;
      }
      .pagination .next {
      transform: rotate(45deg) ;
      }
      .pagination a:hover{
      color: rgb(247, 73, 73);
      }
      .newsContainer{
      width: 400px;
      }
  body
    .wrap
      ul.news-list
        each val in showData
          li.news
            a(href='javascript:;')
              img(src=val.imgUrl, alt='')
            .newsContainer
              h3
                a.title(href='/news/detail?id='+val.id) #{val.title}
              .info
                span.tips
                  span #{val.type}
                  span #{val.country}
                  span 逮捕
                span.time |   #{val.addTime}
      .pagination
        a.prev(href='javascript:;') ⌜
        - for(let i=1;i<=pageCount;i++)
            a(href='/news/index?p='+i) #{i}
        a.next(href='javascript:;') ⌝
       
